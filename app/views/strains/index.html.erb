<p id="notice"><%= notice %></p>

<h1>Strains</h1>

<table class="table table-sm" >
  <thead>
    <tr>
      <th  style="width: 15%">Name</th>
       <th  style="width: 30%">Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @strains.each do |strain| %>
      <tr>
        <td><%= strain.name %></td>
        
        <td><%= strain.available.to_s.gsub("true", "Yes").gsub("false", "No") %></td>
        <td style="width: 5%"><%= link_to 'Show', strain %></td>
        <td style="width: 5%"><%= link_to 'Edit', edit_strain_path(strain) %></td>
        <td style="width: 5%"><%= link_to 'Destroy', strain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Strain', new_strain_path %> |
